@{
    ViewBag.Title = "Home Page";
}

<div class="container" id="containerId">

    <h2>Tasks 1</h2>
    <p id="userId" hidden>@ViewBag.UserId</p>
    <table class="table" id="tableId1">
        <thead>
            <tr>
                <th>Progress</th>
                <th>State</th>
                <th>Start</th>
                <th>End</th>
                <th>Result</th>
                <th>Delete</th>
                <th>Cancel</th>
            </tr>
        </thead>
        <tbody id="tbody1" class="tbody">
            @for (int i = 0; i < ViewBag.Tasks.Count; ++i)
            {
            <tr>
                <td>
                    <div class="progress">
                        <div class="progress-bar progress-bar-@ViewBag.NameBars[i] " role="progressbar"
                             aria-valuenow="@ViewBag.Tasks[i].Percentage"
                             aria-valuemin="0" aria-valuemax="100" style="width:@ViewBag.Tasks[i].Percentage%" id="@ViewBag.Tasks[i].Id">
                        </div>
                    </div>
                </td>
                <td>@ViewBag.Tasks[i].TaskResult.ToString()</td>
                <td>@ViewBag.Tasks[i].StartDate</td>
                <td>@ViewBag.Tasks[i].EndDate</td>
                <td><a id="a-@ViewBag.Tasks[i].Id" href="@ViewBag.Tasks[i].Url">@ViewBag.Tasks[i].Topic</a></td>
                <td><button class="btn btn-default delBtn">Delete</button></td>
                <td><button class="btn btn-default cancelBtn" disabled>Cancel</button></td>
            </tr>
            }
        </tbody>
    </table>
    <p><button id="btnid1" class="btn btn-default addTaskButton">New Task 1</button></p>

    <h2>Tasks 2</h2>
    <table class="table" id="tableId2">
        <thead>
            <tr>
                <th>Progress</th>
                <th>State</th>
                <th>Start</th>
                <th>End</th>
                <th>Result</th>
                <th>Delete</th>
                <th>Cancel</th>
            </tr>
        </thead>
        <tbody id="tbody2" class="tbody">
            @for (int i = 0; i < ViewBag.Tasks2.Count; ++i)
            {
            <tr>
                <td>
                    <div class="progress">
                        <div class="progress-bar progress-bar-@ViewBag.NameBars2[i] " role="progressbar"
                             aria-valuenow="@ViewBag.Tasks2[i].Percentage"
                             aria-valuemin="0" aria-valuemax="100" style="width:@ViewBag.Tasks2[i].Percentage%" id="@ViewBag.Tasks2[i].Id">
                        </div>
                    </div>
                </td>
                <td>@ViewBag.Tasks2[i].TaskResult.ToString()</td>
                <td>@ViewBag.Tasks2[i].StartDate</td>
                <td>@ViewBag.Tasks2[i].EndDate</td>
                <td><a id="a-@ViewBag.Tasks2[i].Id" href="@ViewBag.Tasks2[i].Url">@ViewBag.Tasks2[i].Topic</a></td>
                <td><button class="btn btn-default delBtn">Delete</button></td>
                <td><button class="btn btn-default cancelBtn" disabled>Cancel</button></td>
            </tr>
            }
        </tbody>
    </table>
    <p><button id="btnid2" class="btn btn-default addTaskButton">New Task 2</button></p>


</div>

@section scripts {
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.3.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script src="~/Scripts/util.js"></script>
}

